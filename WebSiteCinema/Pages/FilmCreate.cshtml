@page
@model WebSiteCinema.Pages.FilmCreate

@{
    Layout = "_AdminLayout";
}
<div class="container">
    <h1>Добавить фильм</h1>
    <div class="form">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Название</label>
                <input type="text" id="name" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="category">Жанр</label>
                <input type="text" id="category" name="category" class="form-control">
            </div>
            <div class="form-group">
                <label for="age_rating">Возрастное ограничение</label>
                <input type="text" id="age_rating" name="age_rating" class="form-control">
            </div>
            <div class="form-group">
                <label for="actors">Актёры</label>
                <input type="text" id="actors" name="actors" class="form-control">
            </div>
            <div class="form-group">
                <label for="duration">Длительность</label>
                <input type="time" id="duration" name="duration" class="form-control">
            </div>
            <div class="form-group">
                <label for="description">Описание</label>
                <input type="text" id="description" name="description" class="form-control">
            </div>
            <div class="form-group">
                <label for="release_date">Дата выхода</label>
                <input type="date" id="release_date" name="release_date" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="picture">Постер</label>
                <input type="file" id="picture" name="picture" class="form-control-file">
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" asp-page-handler="CreateMovie">
            </div>
        </form>
    </div>
</div>
